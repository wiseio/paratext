#include<stdio.h>

int somaimpar (int a);
int soma (int d);

int main (){
	
	int b, resultado, resultado2;
	printf("digite o valor da soma dos numeros impares");
	scanf("%d",&b);
	somaimpar(b);
	resultado = somaimpar (b);
	
	printf("o valor da soma dos termos eh %d\n\n", resultado);
	
	soma (b);
	resultado2 = soma (b);
	
	printf("\n\no valor da soma dos numeros eh %d\n\n", resultado2);
	
}
int somaimpar(int a){
	
	if (a==1){
		return 1;
	}
	else {
		return somaimpar(a-1) + (2*a-1);
	}
	
	
}

int soma (int d){
	
	if (d==1){
		
		return 0;
	}
	else {
		
		return soma(d-1) + (d-1);
	}
	
}
